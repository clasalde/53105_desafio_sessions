<h1>Productos</h1>
<br>
<div class="container">
    {{#each products}}
    <div class="card">
        <div>
            <p class="bold"> {{this.title}} </p>
            <p> {{this.description}} </p><br><br>
            <p class="bold big">$ {{this.price}} </p>
        </div>
        <button class="btn">Agregar al Carrito</button>
    </div>
    {{/each}}
</div>
<br>
<br>

{{#if hasNextPage}}
    <button>
        <a href="/products?page={{nextPage}}"> Siguiente </a>
    </button>    
{{/if}} 

{{#if hasPrevPage}}
    <button>
        <a href="/products?page={{prevPage}}"> Anterior </a>
    </button>    
{{/if}}

